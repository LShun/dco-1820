\begin_inset Formula $x=\sin kt$
\end_inset

 which satisfy the 
\begin_inset Formula $D.E.,\frac{d^{2}x}{dt^{2}}=-9x$
\end_inset


\end_layout

\begin_layout Enumerate
\begin_inset Formula $x=\sin kt$
\end_inset


\begin_inset Formula 
\begin{align*}
\frac{dx}{dt} & =k\cos kt\\
\frac{d^{2}x}{dt^{2}} & =k\left(-k\sin kt\right)\\
\frac{d^{2}x}{dt^{2}} & =-k^{2}\sin kt\\
 & =-k^{2}x\\
-9x & =-k^{2}x\\
9 & =k^{2}\\
k & =3
\end{align*}

\end_inset


