\begin_layout Standard
Determine whether the following series converges or diverges:
\end_layout

\begin_layout Enumerate
\begin_inset Formula $\sum_{n=1}^{\infty}\frac{99^{n}}{n!}$
\end_inset


\begin_inset Formula 
\[
a_{n}=\frac{99^{n}}{n!},a_{n+1}=\frac{99^{n+1}}{\left(n+1\right)!}
\]

\end_inset


\begin_inset Formula 
\begin{align*}
\lim_{n\to\infty}\left|\frac{a_{n+1}}{a_{n}}\right| & =\lim_{n\to\infty}\frac{99^{n+1}}{\left(n+1\right)!}\cdot\frac{n!}{99^{n}}\\
 & =\lim_{n\to\infty}\frac{99^{n+1}}{\left(n+1\right)!}\cdot\frac{n!}{99^{n}}\\
 & =\lim_{n\to\infty}\frac{99^{n+1}}{99^{n}}\cdot\frac{n!}{\left(n+1\right)!}\\
 & =\lim_{n\to\infty}\frac{99^{n+1}}{99^{n}}\cdot\frac{n!}{\left(n+1\right)!}\\
 & =\lim_{n\to\infty}99\cdot\frac{n!}{\left(n+1\right)n!}\text{note: still the same thing}\\
 & =\lim_{n\to\infty}\frac{99}{n+1}=0\\
 & <1\left(convergent\right)
\end{align*}

\end_inset


\end_layout

\begin_layout Enumerate
\begin_inset Formula $\sum_{n=1}^{\infty}\frac{\left(2n\right)!}{\left(n!\right)^{2}}$
\end_inset


\begin_inset Formula 
\[
a_{n}=\frac{\left(2n\right)!}{\left(n!\right)^{2}},a_{n+1}=\frac{\left(2\left(n+1\right)\right)!}{\left(\left(n+1\right)!\right)^{2}}
\]

\end_inset


\begin_inset Formula 
\begin{align*}
\lim_{n\to\infty}\left|\frac{a_{n+1}}{a_{n}}\right| & =\lim_{n\to\infty}\frac{\left(2\left(n+1\right)\right)!}{\left(\left(n+1\right)!\right)^{2}}*\frac{\left(n!\right)^{2}}{\left(2n\right)!}\\
 & =\lim_{n\to\infty}\frac{\left(2\left(n+1\right)\right)!}{\left(2n\right)!}*\frac{\left(n!\right)^{2}}{\left(\left(n+1\right)!\right)^{2}}\\
 & =\lim_{n\to\infty}\frac{\left(2\left(n+1\right)\right)!}{\left(2n\right)!}*\left(\frac{n!}{\left(n+1\right)!}\right)^{2}\\
 & =\lim_{n\to\infty}\frac{\left(2n+2\right)\left(2n+1\right)\cancel{\left(2n\right)!}}{\cancel{\left(2n\right)!}}\cdot\left(\frac{\cancel{n!}}{\left(n+1\right)\cancel{n!}}\right)^{2}\\
 & =\lim_{n\to\infty}\frac{\left(2n+2\right)\left(2n+1\right)\cancel{\left(2n\right)!}}{\cancel{\left(2n\right)!}}\cdot\left(\frac{\cancel{n!}}{\left(n+1\right)\cancel{n!}}\right)^{2}\\
 & =\lim_{n\to\infty}\frac{\left(2n+2\right)\left(2n+1\right)}{\left(n+1\right)\left(n+1\right)}\\
 & =\lim_{n\to\infty}\frac{4n^{2}+6n+2}{n^{2}+2n+1}=4\left(>1\right)
\end{align*}

\end_inset


\end_layout

\begin_deeper
\begin_layout Enumerate
The series is divergent
\end_layout

\end_deeper
\begin_layout Enumerate
\begin_inset Formula $\sum_{n=1}^{\infty}\frac{n^{2}}{\left(2n-1\right)!}$
\end_inset


\end_layout

\begin_deeper
\begin_layout Enumerate
\begin_inset Formula $a_{n}=\frac{n^{2}}{\left(2n-1\right)!},a_{n+1}=\frac{\left(n+1\right)^{2}}{\left(2\left(n+1\right)-1\right)!}=\frac{\left(n+1\right)^{2}}{\left(2n+1\right)!}$
\end_inset


\end_layout

\begin_layout Enumerate
\begin_inset space ~
\end_inset


\begin_inset Formula 
\begin{align*}
\lim_{n\to\infty}\left|\frac{a_{n+1}}{a_{n}}\right| & =\lim_{n\to\infty}\frac{\left(n+1\right)^{2}}{\left(2n+1\right)!}\cdot\frac{\left(2n-1\right)!}{n^{2}}\\
 & =\lim_{n\to\infty}\frac{\left(n+1\right)^{2}}{n^{2}}\cdot\frac{\left(2n-1\right)!}{\left(2n+1\right)!}\\
 & =\lim_{n\to\infty}\frac{n^{2}+2n+1}{n^{2}}\cdot\frac{\left(2n-1\right)!}{\left(2n+1\right)\left(2n+1-1\right)\left(2n+1-2\right)!}\text{note: expand the factorial}\\
 & =\lim_{n\to\infty}\frac{n^{2}+2n+1}{n^{2}}\cdot\frac{\cancel{\left(2n-1\right)!}}{\left(2n+1\right)\left(2n\right)\cancel{\left(2n-1\right)!}}\\
